<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:padding="32dp"
    android:scrollbars="none"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:animateLayoutChanges="true">

        <!-- Заголовок -->
        <TextView
            android:id="@+id/textViewChooseAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Виберіть дію"
            android:textColor="@android:color/white"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="32dp" />

        <!-- Обробка книг -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_bg"
            android:elevation="6dp"
            android:padding="16dp"
            android:layout_marginBottom="24dp">

            <Button
                android:id="@+id/btnBook"
                style="@style/MenuMainButton"
                android:text="Обробка книг" />

            <LinearLayout
                android:id="@+id/subButtonBook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:animateLayoutChanges="true"
                android:visibility="gone">

                <Button
                    android:id="@+id/btnAddBook"
                    style="@style/MenuSubButton"
                    android:text="Додати книгу" />

                <Button
                    android:id="@+id/btnViewBooks"
                    style="@style/MenuSubButton"
                    android:text="Переглянути книги" />

                <Button
                    android:id="@+id/btnDeleteBook"
                    style="@style/MenuSubButton"
                    android:text="Видалити книги" />

                <Button
                    android:id="@+id/btnSellBook"
                    style="@style/MenuSubButton"
                    android:text="Продати книги" />
            </LinearLayout>
        </LinearLayout>

        <!-- Обробка читачів -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_bg"
            android:elevation="6dp"
            android:padding="16dp"
            android:layout_marginBottom="24dp">

            <Button
                android:id="@+id/btnReader"
                style="@style/MenuMainButton"
                android:text="Обробка читачів" />

            <LinearLayout
                android:id="@+id/subButtonReader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:animateLayoutChanges="true"
                android:visibility="gone">

                <Button
                    android:id="@+id/btnAddReader"
                    style="@style/MenuSubButton"
                    android:text="Додати читача" />

                <Button
                    android:id="@+id/btnViewReaders"
                    style="@style/MenuSubButton"
                    android:text="Переглянути читачів" />

                <Button
                    android:id="@+id/btnDeleteReader"
                    style="@style/MenuSubButton"
                    android:text="Видалити читачів" />
                <Button
                    android:id="@+id/btnSyncReader"
                    style="@style/MenuSubButton"
                    android:text="Синхронізація читача з застосунком" />
            </LinearLayout>
        </LinearLayout>

        <!-- Видача та повернення книг -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_bg"
            android:elevation="6dp"
            android:padding="16dp"
            android:layout_marginBottom="24dp">

            <Button
                android:id="@+id/btnIssuanceAndReturn"
                style="@style/MenuMainButton"
                android:text="Видача та повернення книг" />

            <LinearLayout
                android:id="@+id/subButtonIssuanceAndReturn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:animateLayoutChanges="true"
                android:visibility="gone">

                <Button
                    android:id="@+id/btnIssuance"
                    style="@style/MenuSubButton"
                    android:text="Видати книгу" />

                <Button
                    android:id="@+id/btnReturn"
                    style="@style/MenuSubButton"
                    android:text="Повернути книгу" />

                <Button
                    android:id="@+id/btnІssuedBooks"
                    style="@style/MenuSubButton"
                    android:text="Перегляд виданих книг" />
            </LinearLayout>
        </LinearLayout>

        <!-- Інші кнопки -->
        <Button
            android:id="@+id/btnFilter"
            style="@style/MenuMainButton"
            android:text="Фільтр" />

        <Button
            android:id="@+id/btnReport"
            style="@style/MenuMainButton"
            android:text="Звіт видачі/повернення"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/btnReportSell"
            style="@style/MenuMainButton"
            android:text="Звіт продажів"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/btnTerminal"
            style="@style/MenuMainButton"
            android:text="Термінал"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp" />
    </LinearLayout>
</ScrollView>