<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    tools:context=".client.ClientMainMenu">

    <!-- Основний контент -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Верхня панель з кнопкою меню -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start"
            android:padding="16dp">

            <ImageButton
                android:id="@+id/btnMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_close"
                android:background="@android:color/transparent"
                android:contentDescription="Меню"
                app:tint="@android:color/white" />
        </LinearLayout>

        <!-- Основна частина з 4 кнопками (2x2) -->
        <GridLayout
            android:id="@+id/mainGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:columnCount="2"
            android:rowCount="2"
            android:alignmentMode="alignMargins"
            android:padding="16dp"
            android:rowOrderPreserved="false">

            <!-- Бібліотеки -->
            <LinearLayout
                android:id="@+id/btnLibraries"
                style="@style/ClientMenuButton">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/library"
                    app:tint="@android:color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Бібліотеки"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Книги -->
            <LinearLayout
                android:id="@+id/btnBooks"
                style="@style/ClientMenuButton">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/book"
                    app:tint="@android:color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Книги"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Мої книги -->
            <LinearLayout
                android:id="@+id/btnMyBooks"
                style="@style/ClientMenuButton">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/book"
                    app:tint="@android:color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Мої книги"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- QR код -->
            <LinearLayout
                android:id="@+id/btnQR"
                style="@style/ClientMenuButton">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/isbn"
                    app:tint="@android:color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QR код"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </GridLayout>
    </FrameLayout>

    <!-- Бокове меню -->
    <LinearLayout
        android:id="@+id/sideMenu"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#CC000000"
        android:padding="16dp"
        android:layout_gravity="start">

        <Button
            android:id="@+id/btnEditData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Редагувати особисті дані"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="8dp"
            style="@style/MenuSubButton"/>

        <Button
            android:id="@+id/btnChangePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Змінити пароль"
            android:layout_marginBottom="8dp"
            style="@style/MenuSubButton"/>

        <Button
            android:id="@+id/btnChangeQR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Змінити QR код"
            style="@style/MenuSubButton"/>
    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>
