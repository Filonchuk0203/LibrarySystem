<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    tools:context=".Terminal">

    <!-- Кнопка-хрестик у правому верхньому кутку -->
    <ImageButton
        android:id="@+id/btnClose"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_close"
        app:tint="#FFFFFF"
        android:contentDescription="Закрити" />

    <!-- Логотип -->
    <LinearLayout
        android:id="@+id/logoContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:layout_marginTop="60dp">

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/logotype"
            android:contentDescription="App Logo" />
    </LinearLayout>

    <!-- Основний блок -->
    <LinearLayout
        android:id="@+id/terminalCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp"
        android:layout_below="@id/logoContainer"
        android:layout_marginTop="40dp"
        android:layout_marginStart="120dp"
        android:layout_marginEnd="120dp"
        android:background="@drawable/card_bg"
        android:elevation="8dp">

        <!-- Заголовок -->
        <TextView
            android:id="@+id/tvScanInstruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Авторизація користувача"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="40sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="32dp"
            android:gravity="center"
            android:lineSpacingExtra="4dp" />

        <!-- Кнопки -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnQR"
                style="@style/MenuMainButton"
                android:text="Авторизація через QR" />

            <Button
                android:id="@+id/btnLoginManually"
                style="@style/MenuMainButton"
                android:text="Авторизація через логін"
                android:layout_marginTop="12dp" />

            <Button
                android:id="@+id/btnGuestPurchase"
                style="@style/MenuMainButton"
                android:text="Купівля без авторизації"
                android:layout_marginTop="12dp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
