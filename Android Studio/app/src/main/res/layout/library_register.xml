<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Реєстрація бібліотеки"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_bg"
            android:padding="20dp"
            android:layout_marginBottom="24dp"
            android:clipToOutline="true">

            <EditText
                android:id="@+id/editTextLibraryName"
                style="@style/CustomInputField"
                android:hint="Назва бібліотеки"/>

            <EditText
                android:id="@+id/editTextLibraryAddress"
                style="@style/CustomInputField"
                android:hint="Адреса бібліотеки"/>

            <EditText
                android:id="@+id/editTextLibrarySecretPassword"
                style="@style/CustomInputField"
                android:hint="Секретний пароль"
                android:inputType="textPassword"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnRegisterLibrary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Зареєструвати бібліотеку"
            android:textAllCaps="false"
            android:backgroundTint="#3b82f6"
            android:textColor="#ffffff"
            android:paddingVertical="12dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/rounded_button"/>
    </LinearLayout>
</ScrollView>
